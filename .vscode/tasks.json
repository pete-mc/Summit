{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension",
			"type": "shell",
			"command": "npm-run-all -s webpack",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${env:WORKSPACE_PATH}/browser-extension"
			}
		},
		{
			"label": "Build Cordova App",
			"type": "shell",
			"command": "npm-run-all -s prepare build",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": [],
			"options": {
				"cwd": "${env:CORDOVA_WORKSPACE_PATH}"
			}
		}
	]
}
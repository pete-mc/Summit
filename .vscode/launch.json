{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "https://terrain.scouts.com.au/",
      "webRoot": "${workspaceFolder}/browser-extension",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*"
      },
      "preLaunchTask": "Build Extension",
      "runtimeArgs": [
        "--load-extension=${workspaceFolder}/browser-extension",
        "--auto-open-devtools-for-tabs"
      ],
      "userDataDir": false
    }
  ]
}
  
{
    "manifest_version": 3,
    "name": "Terrain | Summit",
    "version": "2.0.0",
    "description": "Where Every Achievement is a Summit Conquered",
    "icons": {
        "16": "/images/Icon16.png",
        "48": "/images/Icon48.png",
        "128": "/images/Icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://terrain.scouts.com.au/*"
            ],
            "js": [
                "/scripts/dependencies/moment.js",
                "/scripts/dependencies/datatables.min.js",
                "/scripts/dependencies/chart.min.js",
                "/scripts/dependencies/chartjs-plugin-datalabels.min.js",
                "/scripts/helperFunctions.js",
                "/scripts/terrainCalls.js",
                "/scripts/summitStart.js",
                "/scripts/copyLogbook.js",
                "/scripts/exportiCal.js",
                "/scripts/summitMenu.js",
                "/scripts/reports/testReport.js",
                "/scripts/reports/milestonePlanningReport.js",
                "/scripts/reports/progressReport.js",
                "/scripts/reports/oasReport.js",
                "/scripts/inputs/bulkCalendar.js",
                "/scripts/dependencies/flatpickr.js"
            ],
            "css": [
                "/styles/dependencies/datatables.min.css",
                "/styles/dependencies/flatpickr.min.css",
                "/styles/summit.css"
            ]
        }
    ],
    "permissions": [],
    "content_security_policy": {
        "extension_pages": "default-src 'self'"
      }
}
